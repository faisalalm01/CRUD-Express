
<div class="container mt-5">
  <div class="row">
    <p>
      <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Add Data Buku
      </button>
    </p>
    <div class="collapse" id="collapseExample">
      <div class="card card-body">
        <form action="/add" method="POST">
          <div class="form-floating mb-3">
            <input type="text" name="judul" class="form-control" id="floatingInput" placeholder="judul">
            <label for="floatingInput">Judul</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" name="harga" class="form-control" id="floatingInput" placeholder="harga">
            <label for="floatingInput">harga</label>
          </div>
            <div class="form-floating mb-3">
              <input type="text" name="kategori" class="form-control" id="floatingInput" placeholder="kategori">
              <label for="floatingInput">Kategori</label>
            </div>
          <div class="form-group">
            <select name="" id="" class="form-control">
              <option disabled selected>Pilih</option>
              {{#each result}}
                 <option value="">{{data.kategori}}</option>
              {{/each}}
              {{!-- <% if(data) { %>
                <% for (let j = 0; j < data.length; j++) { %> 
                  <option value=""><%= data[j].kategori %> </option>
              <%  } %>
              <% } %> --}}
            </select>
          </div>

          <button type="submit" class="btn btn-primary">
            save buku
          </button>
        </form>
      </div>
    </div>
    <div class="col-md-12 mt-2">
      <table class="table table-dark table-hover">
        <thead>
          <tr>
            <td>no</td>
            <td>judul</td>
            <td>harga</td>
            <td>kategori</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
             <tr>
              <td>1</td>
              <td>{{judul}}</td>
              <td>{{harga}}</td>
              <td>{{kategori}}</td>
              <td>
                <a href="/update/{{id}}" class="btn btn-info">Edit</a>
                <a href="/delete/{{id}}" class="btn btn-danger">Delete</a>
              </td>
             </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="col-md-5 border">
      <div class="card-body m-2">
      </div>
    </div>

    </div>
  </div>

