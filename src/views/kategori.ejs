<% include partials/_header %> 

<div class="card border">
    <div class="card-body">
        <h1>
            Kategori
        </h1>
    </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7 border">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>no</td>
            <td>kategori</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (kategori) { %>
            <% for(var i = 0; i < kategori.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= kategori[i].kategori %></td>
                <td>
                  <a href="/kategori/update/<%= kategori[i].id_kat %>" class="btn btn-info">Edit</a>
                  <a href="/kategori/delete/<%= kategori[i].id_kat %>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="col-md-5 border">
      <div class="card-body m-2">

        <form action="/kategori/add" method="POST">
          <div class="form-group">
            <input type="text" name="kategori" placeholder="kategori" class="form-control" autofocus>
          </div>
          <!-- <div class="form-group">
            <input type="text" name="harga" placeholder="harga" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="kategori" placeholder="kategori" class="form-control">
          </div> -->

          <button type="submit" class="btn btn-primary">
            save kategori
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
