<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7 border">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>no</td>
            <td>judul</td>
            <td>harga</td>
            <td>kategori</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].judul %></td>
                <td><%= data[i].harga %></td>
                <td><%= data[i].kategori %></td>
                <td>
                  <a href="/update/<%= data[i].id %>" class="btn btn-info">Edit</a>
                  <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="col-md-5 border">
      <div class="card-body m-2">

        <form action="/add" method="POST">
          <div class="form-group">
            <input type="text" name="judul" placeholder="judul" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="harga" placeholder="harga" class="form-control">
          </div>

          <div class="form-select">
            <select name="" id="" class="form-control">
              <option disabled selected>--default--</option>
              <% if(data) { %>
                <% for (let j = 0; j < data.length; j++) { %>
                  <option value=""><%= data[j].id_kat %> </option>
              <%  } %>
              <% } %>
            </select>
          </div>

          <div class="form-group">
            <input type="text" name="kategori" placeholder="kategori" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            save buku
          </button>
        </form>
      </div>
    </div>

    </div>
  </div>

<% include partials/_footer %>
